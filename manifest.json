{
    "manifest_version": 2,
  
    "name": "THONK",
    "description": "GET THONKERS EVERYWHERE",
    "author":"DusterTheFirst",
    "homepage_url": "https://github.com/DusterTheFirst/a-real-thonker",
    "version": "1.0",
    "icons": { 
      "16": "icon16.png",
      "48": "icon48.png",
     "128": "icon128.png" 
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "index.html"
    },
    "options_page": "options.html",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "content_scripts": [
        {
            "matches":["http://*/*", "https://*/*"],
            "css": ["thonk.css"],
            "js": ["thonk.js", "thonkmanager.js"]
        }
    ]
  }